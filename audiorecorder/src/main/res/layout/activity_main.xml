<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.edwinacubillos.audiorecorder.MainActivity">

    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/grabar"
        android:id="@+id/bGrabar"
        android:enabled="true"
        android:onClick="grabar"/>
    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detener"
        android:id="@+id/bDetener"
        android:enabled="false"
        android:onClick="detener"/>
    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reproducir"
        android:id="@+id/bReproducir"
        android:enabled="false"
        android:onClick="reproducir"/>

</LinearLayout>
